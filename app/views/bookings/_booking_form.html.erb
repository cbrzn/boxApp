
<% unless current_user?(@user) %>
  <% if current_user.not_booked?(@training) %>
    <%= link_to "Reservar", new_training_booking_path(@training),
        class: "btn btn-primary" %>
  <% else %>
    <%= link_to "Cancelar reservacion",
        training_booking_path(@training, @training.bookings.where(user: current_user).first),
        method: :delete, data:{ confirm: 'Segur@ que quiere cancelar el cupo?' },
        class: "btn btn-primary" %>
    <% end %>
  <% end %>
