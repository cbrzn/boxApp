<% provide(:title, 'Invitar | Box app') %>
<h1>Invitar</h1>

  <div class="col-md-6 col-md-offset-3">
<div class="row">
<%= form_for([@training, @guest]) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name, "Nombre y apellido" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :ci, "Cedula de identidad" %>
  <%= f.number_field :ci %>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.hidden_field :training_id, value: "" %>

  <%= f.submit "Invitar", class: "btn btn-primary" %>
  <% end %>
</div>
