<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Box app", '#', id: "logo" %>
      <ul class="navbar-nav navbar-right">
        <% if logged_in? %>
        <li><%= link_to "Inicio", root_path %></li>
        <li><%= link_to "Horas de clases", trainings_path %></li>
        <% if current_user.admin? %>
        <li><%= link_to "Lista de usuarios", users_path %></li>
        <% end %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Cuenta <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Perfil", current_user %></li>
          <li><%= link_to "RM", user_rms_path(current_user) %></li>
          <li><%= link_to "Editar cuenta", edit_user_path(current_user) %></li>
          <li class="divider"></li>
          <li>
            <%= link_to "Cerrar sesion", logout_path, method: "delete" %>
          </li>
        </ul>
      </li>
    <% else %>
      <li><%= link_to "Inicio", root_path %></li>
      <li><%= link_to "Iniciar sesion", login_path %></li>
    <% end %>
  </ul>
</div>
</header>
